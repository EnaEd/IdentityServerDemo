@page "/auth/signin"
@layout AuthLayout

<div class="row">
    <div class="col-12">
        <h2>SignIn</h2>

        <EditForm Model="_signinModel" OnValidSubmit="OnSignInAsync">
            <RadzenCard>
                <DataAnnotationsValidator />
                <ValidationSummary />

                <label>Email</label>
                <RadzenTextBox @bind-Value="_signinModel.Email" />

                <label>Password</label>
                <RadzenPassword @bind-Value="_signinModel.Password" />

                <hr />
                <RadzenButton ButtonType="Radzen.ButtonType.Submit"
                              Text="Sign In"
                              ButtonStyle="Radzen.ButtonStyle.Primary"
                              class="btn-block" mr2 />
                <RadzenButton ButtonType="Radzen.ButtonType.Submit"
                              Text="Sign Up"
                              ButtonStyle="Radzen.ButtonStyle.Secondary"
                              class="btn-block" mr2 />
            </RadzenCard>
        </EditForm>
    </div>
</div>

